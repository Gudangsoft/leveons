# Production Environment Configuration
# Copy this to .env on production server and update values

APP_NAME="Leveons"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://leveons.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Production Database Configuration
DB_CONNECTION=mysql
DB_HOST=your-db-host.com
DB_PORT=3306
DB_DATABASE=your_production_database
DB_USERNAME=your_production_user
DB_PASSWORD=your_secure_password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.leveons.id
SESSION_SECURE_COOKIE=true

# Cache Configuration (recommended: Redis for production)
CACHE_STORE=database
CACHE_PREFIX=leveons_cache

# Queue Configuration (optional, for background jobs)
QUEUE_CONNECTION=database

# Email Configuration (SMTP recommended)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=info@leveons.id
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@leveons.id
MAIL_FROM_NAME="${APP_NAME}"

# Uncomment if using Redis
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Broadcasting (if needed)
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=public

# AWS S3 (if using cloud storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Security
# SANCTUM_STATEFUL_DOMAINS=leveons.id,www.leveons.id
# SESSION_SECURE_COOKIE=true

VITE_APP_NAME="${APP_NAME}"
